# SmartQuery Backend Environment Variables
# Copy this file to .env and configure your specific values

# Server Configuration
PORT=8000
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://smartquery_user:smartquery_dev_password@localhost:5432/smartquery
REDIS_URL=redis://localhost:6379/0

# Storage Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minio_admin
MINIO_SECRET_KEY=minio_dev_password123
MINIO_BUCKET_NAME=smartquery-files
MINIO_SECURE=false

# Security Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your_super_secure_jwt_secret_key_change_in_production_minimum_32_chars
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30
ENVIRONMENT=development
ENABLE_MOCK_AUTH=true

# AI/LLM Configuration - SET YOUR OWN API KEY!
# OPENAI_API_KEY=your_openai_api_key_here
# LANGCHAIN_API_KEY=your_langchain_api_key

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379

# Security Headers Configuration
SECURITY_HEADERS_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100

# Google OAuth Configuration (SET IN PRODUCTION)
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret

# Additional Security Settings
MAX_REQUEST_SIZE_BYTES=10485760
MAX_QUERY_LENGTH=2000